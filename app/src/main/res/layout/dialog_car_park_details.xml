<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alabaster"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carParkNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/clashgrotesk_regular"
                android:text="Car Park Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/reviewSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/averageRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/bluemunsell"
                    android:secondaryProgressTint="@color/prussianbluek"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/averageRatingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btnViewReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="View Reviews" />

            <TextView
                android:id="@+id/carParkAddressTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/clashgrotesk_regular"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carParkAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/clashgrotesk_regular"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clashgrotesk_regular"
                android:text="Car Park Entrance"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/carParkEntranceImageView"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/enlargeImageView"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_gravity="bottom|end"
                android:background="@color/alabaster"
                android:src="@drawable/enlargeicon" />
        </FrameLayout>



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/clashgrotesk_regular"
            android:text="Description:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/entranceDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/clashgrotesk_regular"
            android:text="Entrance Description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/clashgrotesk_regular"
            android:text="Restrictions"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restrictionsTextView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/clashgrotesk_regular"
            android:text="Restrictions"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Prices"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carparkPricesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Prices"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textview9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Payment Methods"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paymentMethodsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:textColor="@color/black"
                    tools:text="payment methods" />

                <TextView
                    android:id="@+id/standardBaysTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Spaces"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/standardBaysTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Standard Bays"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/disabledBaysTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Disabled Bays"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="Opening Times"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carParkOpeningTimesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashgrotesk_regular"
                    android:text="carParkOpeningTimesTextView"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
