<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ParkingApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/prussianbluek</item>
        <item name="colorPrimaryDark">@color/prussianbluek</item>
        <item name="android:navigationBarColor">@color/alabaster</item>
    </style>

    <!-- Style for TextInputLayout text appearance -->
    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <!-- AlertDialog custom style -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/clashgrotesk_regular</item>
        <item name="android:textStyle">bold</item>

        <item name="colorAccent">@color/prussianbluek</item>
        <item name="android:background">@color/alabaster</item>
        <!-- Custom styles for dialog buttons -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- Negative Button Style -->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/prussianbluek</item>
    </style>

    <!-- Positive Button Style -->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/prussianbluek</item>
    </style>

    <!-- Popup overlay style to maintain consistency with the app theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>



